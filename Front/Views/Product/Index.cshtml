@using Infrastautcure
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IEnumerable<Core.Entities.Product>
@*@model IPagedList<Core.Entities.Product>*@

@{
    ViewData["Title"] = "Index";
}
 @section SpecialStyle{
        <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css">
    }

<div style="margin:10px 10px;">
    <h1>Product List</h1>

    <p>
        <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Qauntity)
                </th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Qauntity)
                    </td>
                  
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> 
                    </td>
                </tr>
            }
        </tbody>
        
    </table>
    <div style="text-align: center;">
        @Html.PagedListPager((IPagedList)Model,pageIndex => Url.Action("Index", new {pageIndex}))

    </div>
</div>